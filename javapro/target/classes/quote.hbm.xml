<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
  <class name="entities.Quote" table="QUOTE">
   <id name="id" type="int" column="ID" >
   <generator class="increment"/>
  </id>
 
  <property name="quote">
    <column name="QUOTE" />
  </property>
  <property name="qauthor">
    <column name="QAUTHOR"/>
  </property>
  <property name="qdate">
    <column name="QDATE"/>
  </property>
   <property name="qnotice">
    <column name="QNOTICE"/>
  </property>
 </class>
</hibernate-mapping>